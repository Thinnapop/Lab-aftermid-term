public class CheckPoint_2 {
    public static void main(String[] args) {
        int money = 1;
        for (int i = 1; i <= 20; i++) {
            System.out.print("day "+i);
            for (int j = 0; j < 1; j++) {
                System.out.println(" Vader total saving "+money);
                money = (money*2)+1;
            }
        }
    }
}
